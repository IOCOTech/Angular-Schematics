import { Helpers } from './helpers';

describe('Helpers', () => {
    describe('guid', () => {
        it('should generate a valid GUID', () => {
            const guid = Helpers.guid.generateGuid();
            const regex = /^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i;
            expect(guid).toMatch(regex);
        });
    });
});
